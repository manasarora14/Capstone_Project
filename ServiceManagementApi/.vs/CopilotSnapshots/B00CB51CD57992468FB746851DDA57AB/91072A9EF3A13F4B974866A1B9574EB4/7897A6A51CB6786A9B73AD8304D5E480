using System.Threading.Tasks;
using Microsoft.AspNetCore.Mvc;
using Moq;
using ServiceManagementApi.Controllers;
using ServiceManagementApi.Services;
using Xunit;

namespace ServiceManagementApi.Tests.Controllers
{
    public class DashboardControllerTests
    {
        [Fact]
        public async Task GetStats_ReturnsOk()
        {
            var mockService = new Mock<IDashboardService>();
            mockService.Setup(s => s.GetStatsAsync()).ReturnsAsync(new { OpenRequests = 5 });

            var controller = new DashboardController(mockService.Object);
            var result = await controller.GetStats();
            Assert.IsType<OkObjectResult>(result);
        }
    }
}
