using System.Collections.Generic;
using System.Security.Claims;
using System.Threading.Tasks;
using Microsoft.AspNetCore.Http;
using Microsoft.AspNetCore.Mvc;
using Moq;
using ServiceManagementApi.Controllers;
using ServiceManagementApi.DTOs;
using ServiceManagementApi.Services;
using Xunit;

namespace ServiceManagementApi.Tests.Controllers
{
    public class TechnicianControllerTests
    {
        [Fact]
        public async Task GetAvailability_ReturnsOk()
        {
            var mockService = new Mock<ITechnicianService>();
            mockService.Setup(s => s.GetAvailabilityAsync(It.IsAny<string>())).ReturnsAsync(new List<TechnicianAvailabilityResponseDto>());

            var controller = new TechnicianController(mockService.Object);

            var user = new ClaimsPrincipal(new ClaimsIdentity(new Claim[] {
                new Claim(ClaimTypes.NameIdentifier, "tech1"),
                new Claim(ClaimTypes.Role, "Technician")
            }, "mock"));

            controller.ControllerContext = new ControllerContext
            {
                HttpContext = new DefaultHttpContext { User = user }
            };

            var result = await controller.GetAvailability("tech1");
            Assert.IsType<OkObjectResult>(result);
        }

        [Fact]
        public async Task GetWorkload_AsTechnician_ReturnsOk()
        {
            var mockService = new Mock<ITechnicianService>();
            mockService.Setup(s => s.GetWorkloadAsync(It.IsAny<string>())).ReturnsAsync(new TechnicianWorkloadDto());

            var controller = new TechnicianController(mockService.Object);

            var user = new ClaimsPrincipal(new ClaimsIdentity(new Claim[] {
                new Claim(ClaimTypes.NameIdentifier, "tech1"),
                new Claim(ClaimTypes.Role, "Technician")
            }, "mock"));

            controller.ControllerContext = new ControllerContext
            {
                HttpContext = new DefaultHttpContext { User = user }
            };

            var result = await controller.GetWorkload();
            Assert.IsType<OkObjectResult>(result);
        }
    }
}
